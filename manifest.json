{
  "manifest_version": 3,
  "name": "BanaScrape",
  "version": "1.0",
  "description": "Hallucination detector for LLMs - Verify AI claims with real-time analysis.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.qwen.ai/*",
    "https://claude.ai/*",
    "https://groq.com/*",
    "https://api.groq.com/*",
    "https://www.google.com/search?q=*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://chat.qwen.ai/*",
        "https://claude.ai/*",
        "https://groq.com/*",
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo.jpg",
      "48": "icons/logo.jpg",
      "128": "icons/logo.jpg"
    }
  },
  "icons": {
    "16": "icons/logo.jpg",
    "48": "icons/logo.jpg",
    "128": "icons/logo.jpg"
  }
}